{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "F-Lang",
  "scopeName": "source.f",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#char_literal" },
    { "include": "#constants" },
    { "include": "#function_definition" },
    { "include": "#type_struct_definition" },
    { "include": "#type_enum_definition" },
    { "include": "#struct_definition" },
    { "include": "#enum_definition" },
    { "include": "#test_block" },
    { "include": "#variable_declaration" },
    { "include": "#for_in" },
    { "include": "#source_generator_definition" },
    { "include": "#source_generator_invocation" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#operators" },
    { "include": "#anonymous_struct_literal" },
    { "include": "#struct_literal" },
    { "include": "#array_access" },
    { "include": "#array_constructs" },
    { "include": "#function_calls" },
    { "include": "#numbers" },
    { "include": "#property_access" }
  ],
  "repository": {
    "comments": {
      "name": "comment.line.double-slash.f",
      "match": "\\/\\/.*$"
    },
    "strings": {
      "name": "string.quoted.double.f",
      "begin": "\"",
      "end": "\"",
      "patterns": [{ "include": "#string_escapes" }]
    },
    "string_escapes": {
      "name": "constant.character.escape.f",
      "match": "\\\\[nrt\"'\\\\0]"
    },
    "char_literal": {
      "name": "string.quoted.single.f",
      "match": "b?'(?:\\\\[nrt'\"\\\\0]|[^'\\\\])'"
    },
    "constants": {
      "name": "constant.language.f",
      "match": "\\b(true|false|null)\\b"
    },
    "function_definition": {
      "comment": "Function definition: [pub] [#directive] fn name",
      "match": "(?:\\b(pub)\\s+)?(?:(#[a-z][a-zA-Z0-9_]*)\\s+)?\\b(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
      "captures": {
        "1": { "name": "storage.modifier.f" },
        "2": { "name": "keyword.other.directive.f" },
        "3": { "name": "storage.type.f" },
        "4": { "name": "entity.name.function.definition.f" }
      }
    },
    "type_struct_definition": {
      "comment": "Type struct definition: [pub] type Name = struct[(T)] { ... }",
      "begin": "(?:\\b(pub)\\s+)?\\b(type)\\s+([A-Z][a-zA-Z0-9_]*)\\s*(=)\\s*(struct)(\\([^)]*\\))?\\s*(\\{)",
      "beginCaptures": {
        "1": { "name": "storage.modifier.f" },
        "2": { "name": "storage.type.f" },
        "3": { "name": "entity.name.type.f" },
        "4": { "name": "keyword.operator.assignment.f" },
        "5": { "name": "storage.type.f" },
        "6": { "name": "storage.type.generic.f" },
        "7": { "name": "punctuation.brace.curly.f" }
      },
      "end": "\\}",
      "endCaptures": {
        "0": { "name": "punctuation.brace.curly.f" }
      },
      "patterns": [
        { "include": "#comments" },
        {
          "comment": "Field definition: name: Type",
          "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*(:)",
          "captures": {
            "1": { "name": "variable.property.f" },
            "2": { "name": "punctuation.separator.type.f" }
          }
        },
        { "include": "#types" },
        { "include": "#keywords" },
        { "include": "#operators" },
        { "include": "#numbers" }
      ]
    },
    "type_enum_definition": {
      "comment": "Type enum definition: [pub] type Name = enum[(T)] { ... }",
      "begin": "(?:\\b(pub)\\s+)?\\b(type)\\s+([A-Z][a-zA-Z0-9_]*)\\s*(=)\\s*(enum)(\\([^)]*\\))?\\s*(\\{)",
      "beginCaptures": {
        "1": { "name": "storage.modifier.f" },
        "2": { "name": "storage.type.f" },
        "3": { "name": "entity.name.type.f" },
        "4": { "name": "keyword.operator.assignment.f" },
        "5": { "name": "storage.type.f" },
        "6": { "name": "storage.type.generic.f" },
        "7": { "name": "punctuation.brace.curly.f" }
      },
      "end": "\\}",
      "endCaptures": {
        "0": { "name": "punctuation.brace.curly.f" }
      },
      "patterns": [
        { "include": "#comments" },
        {
          "comment": "Enum variant with payload: Variant(...)",
          "match": "\\b([A-Z][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "entity.name.tag.f" }
          }
        },
        {
          "comment": "Enum variant",
          "match": "\\b([A-Z][a-zA-Z0-9_]*)\\b",
          "captures": {
            "1": { "name": "entity.name.tag.f" }
          }
        },
        { "include": "#types" },
        { "include": "#numbers" },
        { "include": "#operators" }
      ]
    },
    "struct_definition": {
      "comment": "Struct definition: [pub] struct Name[(T)] { ... }",
      "begin": "(?:\\b(pub)\\s+)?\\b(struct)\\s+([A-Z][a-zA-Z0-9_]*)(\\([^)]*\\))?\\s*(\\{)",
      "beginCaptures": {
        "1": { "name": "storage.modifier.f" },
        "2": { "name": "storage.type.f" },
        "3": { "name": "entity.name.type.f" },
        "4": { "name": "storage.type.generic.f" },
        "5": { "name": "punctuation.brace.curly.f" }
      },
      "end": "\\}",
      "endCaptures": {
        "0": { "name": "punctuation.brace.curly.f" }
      },
      "patterns": [
        { "include": "#comments" },
        {
          "comment": "Field definition: name: Type",
          "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*(:)",
          "captures": {
            "1": { "name": "variable.property.f" },
            "2": { "name": "punctuation.separator.type.f" }
          }
        },
        { "include": "#types" },
        { "include": "#keywords" },
        { "include": "#operators" },
        { "include": "#numbers" }
      ]
    },
    "enum_definition": {
      "comment": "Enum definition: [pub] enum Name[(T)] { ... }",
      "begin": "(?:\\b(pub)\\s+)?\\b(enum)\\s+([A-Z][a-zA-Z0-9_]*)(\\([^)]*\\))?\\s*(\\{)",
      "beginCaptures": {
        "1": { "name": "storage.modifier.f" },
        "2": { "name": "storage.type.f" },
        "3": { "name": "entity.name.type.f" },
        "4": { "name": "storage.type.generic.f" },
        "5": { "name": "punctuation.brace.curly.f" }
      },
      "end": "\\}",
      "endCaptures": {
        "0": { "name": "punctuation.brace.curly.f" }
      },
      "patterns": [
        { "include": "#comments" },
        {
          "comment": "Enum variant with payload: Variant(...)",
          "match": "\\b([A-Z][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "entity.name.tag.f" }
          }
        },
        {
          "comment": "Enum variant",
          "match": "\\b([A-Z][a-zA-Z0-9_]*)\\b",
          "captures": {
            "1": { "name": "entity.name.tag.f" }
          }
        },
        { "include": "#types" },
        { "include": "#numbers" },
        { "include": "#operators" }
      ]
    },
    "test_block": {
      "comment": "Test block: test \"name\"",
      "match": "\\b(test)\\s+(\"[^\"]*\")",
      "captures": {
        "1": { "name": "storage.type.f" },
        "2": { "name": "string.quoted.double.f" }
      }
    },
    "variable_declaration": {
      "comment": "Variable declaration: [pub] let/const name",
      "match": "(?:\\b(pub)\\s+)?\\b(let|const)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
      "captures": {
        "1": { "name": "storage.modifier.f" },
        "2": { "name": "storage.type.f" },
        "3": { "name": "variable.other.f" }
      }
    },
    "for_in": {
      "comment": "For-in loop: for name in",
      "match": "\\b(for)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s+(in)\\b",
      "captures": {
        "1": { "name": "keyword.control.flow.f" },
        "2": { "name": "variable.other.f" },
        "3": { "name": "keyword.control.flow.f" }
      }
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.flow.f",
          "match": "\\b(return|defer|if|else|for|in|break|continue|match|loop|and|or)\\b"
        },
        {
          "comment": "Import declaration",
          "match": "(?:\\b(pub)\\s+)?\\b(import)\\s+([a-zA-Z_][a-zA-Z0-9_]*(?:\\.[a-zA-Z_][a-zA-Z0-9_]*)*)",
          "captures": {
            "1": { "name": "storage.modifier.f" },
            "2": { "name": "keyword.control.import.f" },
            "3": { "name": "entity.name.module.f" }
          }
        },
        {
          "name": "storage.modifier.f",
          "match": "\\b(pub)\\b"
        },
        {
          "name": "storage.type.f",
          "match": "\\b(fn|struct|enum|type|let|const|test)\\b"
        },
        {
          "name": "keyword.operator.cast.f",
          "match": "\\bas\\b"
        },
        {
          "name": "keyword.other.directive.f",
          "match": "#[a-z][a-zA-Z0-9_]*"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.dereference.f",
          "match": "\\.\\*"
        },
        {
          "name": "keyword.operator.range.f",
          "match": "\\.\\."
        },
        {
          "name": "keyword.operator.optional-chain.f",
          "match": "\\?\\."
        },
        {
          "name": "keyword.operator.coalesce.f",
          "match": "\\?\\?"
        },
        {
          "name": "keyword.operator.fat-arrow.f",
          "match": "=>"
        },
        {
          "name": "keyword.operator.compound-assignment.f",
          "match": "\\+="
        },
        {
          "name": "keyword.operator.comparison.f",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical-not.f",
          "match": "!"
        },
        {
          "name": "keyword.operator.bitwise.f",
          "match": "(\\||\\^|&)"
        },
        {
          "name": "keyword.operator.arithmetic.f",
          "match": "(\\+|\\-|\\*|\\/|\\%)"
        },
        {
          "name": "keyword.operator.assignment.f",
          "match": "="
        }
      ]
    },
    "anonymous_struct_literal": {
      "comment": "Anonymous struct literal: .{ field = value, ... }",
      "begin": "\\.(\\{)",
      "beginCaptures": {
        "1": { "name": "punctuation.brace.curly.f" }
      },
      "end": "(\\})",
      "endCaptures": {
        "1": { "name": "punctuation.brace.curly.f" }
      },
      "patterns": [
        {
          "match": "([a-zA-Z_][a-zA-Z0-9_]*)\\s*(=)",
          "captures": {
            "1": { "name": "variable.property.f" },
            "2": { "name": "keyword.operator.assignment.f" }
          }
        },
        { "include": "#comments" },
        { "include": "#strings" },
        { "include": "#char_literal" },
        { "include": "#numbers" },
        { "include": "#constants" },
        { "include": "#function_calls" },
        { "include": "#types" },
        { "include": "#operators" },
        { "include": "#property_access" }
      ]
    },
    "struct_literal": {
      "comment": "Struct literal: Name { field = value, ... } or Name(T) { ... }",
      "name": "meta.struct.literal.f",
      "begin": "\\b([A-Z][a-zA-Z0-9_]*)(\\([^)]*\\))?\\s*(\\{)",
      "beginCaptures": {
        "1": { "name": "entity.name.type.f" },
        "2": { "name": "storage.type.generic.f" },
        "3": { "name": "punctuation.brace.curly.f" }
      },
      "end": "\\}",
      "endCaptures": {
        "0": { "name": "punctuation.brace.curly.f" }
      },
      "patterns": [
        {
          "match": "([a-zA-Z_][a-zA-Z0-9_]*)\\s*(=)",
          "captures": {
            "1": { "name": "variable.property.f" },
            "2": { "name": "keyword.operator.assignment.f" }
          }
        },
        { "include": "#comments" },
        { "include": "#strings" },
        { "include": "#char_literal" },
        { "include": "#numbers" },
        { "include": "#constants" },
        { "include": "#keywords" },
        { "include": "#types" },
        { "include": "#operators" },
        { "include": "#function_calls" },
        { "include": "#property_access" }
      ]
    },
    "property_access": {
      "patterns": [
        {
          "comment": "Enum variant with payload: .Variant(...)",
          "match": "(\\.)([A-Z][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "punctuation.accessor.f" },
            "2": { "name": "entity.name.tag.f" }
          }
        },
        {
          "comment": "Enum variant or type member: .Variant",
          "match": "(\\.)([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "punctuation.accessor.f" },
            "2": { "name": "entity.name.tag.f" }
          }
        },
        {
          "comment": "Method call: obj.method(...)",
          "match": "(\\.)([a-z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "punctuation.accessor.f" },
            "2": { "name": "entity.name.function.f" }
          }
        },
        {
          "comment": "Tuple index: expr.0, expr.1",
          "match": "(\\.)(\\d+)\\b",
          "captures": {
            "1": { "name": "punctuation.accessor.f" },
            "2": { "name": "constant.numeric.integer.f" }
          }
        },
        {
          "comment": "Property access: obj.field",
          "match": "(\\.)([a-z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "punctuation.accessor.f" },
            "2": { "name": "variable.property.f" }
          }
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "comment": "Primitive type with optional &, [], ?: &u8[]?",
          "name": "storage.type.primitive.f",
          "match": "&?(i8|i16|i32|i64|isize|u8|u16|u32|u64|usize|f32|f64|bool|char|void|never)(\\[\\])?\\??"
        },
        {
          "comment": "Generic param with optional &, [], ?: &$T[]?",
          "name": "storage.type.generic.f",
          "match": "&?\\$[a-zA-Z_][a-zA-Z0-9_]*(\\[\\])?\\??"
        },
        {
          "comment": "Named type with optional &, generics, [], ?: &Slice($T)[]?",
          "name": "entity.name.type.f",
          "match": "&?[A-Z][a-zA-Z0-9_]*(\\([^)]*\\)|\\[[^\\]]*\\])?(\\[\\])?\\??"
        }
      ]
    },
    "function_calls": {
      "comment": "Function calls start with lowercase: func(...)",
      "match": "([a-z_][a-zA-Z0-9_]*)\\s*(?=\\()",
      "captures": {
        "1": { "name": "entity.name.function.f" }
      }
    },
    "array_access": {
      "name": "meta.array.access.f",
      "begin": "(?<=[a-zA-Z0-9_])\\s*(\\[)",
      "end": "(\\])",
      "beginCaptures": {
        "1": { "name": "punctuation.bracket.square.f" }
      },
      "endCaptures": {
        "1": { "name": "punctuation.bracket.square.f" }
      },
      "patterns": [
        { "include": "#numbers" },
        { "include": "#function_calls" },
        { "include": "#types" },
        { "include": "#operators" },
        { "include": "#property_access" }
      ]
    },
    "array_constructs": {
      "name": "meta.array.f",
      "begin": "(\\[)",
      "end": "(\\])",
      "beginCaptures": {
        "1": { "name": "punctuation.bracket.square.f" }
      },
      "endCaptures": {
        "1": { "name": "punctuation.bracket.square.f" }
      },
      "patterns": [
        {
          "comment": "Array type: [Type; size]",
          "match": "([a-zA-Z_][a-zA-Z0-9_]*)\\s*(;)\\s*(\\d+)",
          "captures": {
            "1": { "name": "entity.name.type.f" },
            "2": { "name": "punctuation.separator.f" },
            "3": { "name": "constant.numeric.integer.f" }
          }
        },
        {
          "comment": "Array repeat: [value; count]",
          "match": "([\\w\\.\\(\\)\"]+)\\s*(;)\\s*(\\d+)",
          "captures": {
            "1": { "name": "variable.other.f" },
            "2": { "name": "punctuation.separator.f" },
            "3": { "name": "constant.numeric.integer.f" }
          }
        },
        { "include": "#strings" },
        { "include": "#char_literal" },
        { "include": "#numbers" },
        { "include": "#constants" },
        { "include": "#function_calls" },
        { "include": "#types" },
        { "include": "#operators" },
        { "include": "#property_access" }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "comment": "Hex literal: 0xFF",
          "name": "constant.numeric.hex.f",
          "match": "\\b0x[0-9a-fA-F_]+"
        },
        {
          "comment": "Binary literal: 0b1010",
          "name": "constant.numeric.binary.f",
          "match": "\\b0b[01_]+"
        },
        {
          "comment": "Octal literal: 0o77",
          "name": "constant.numeric.octal.f",
          "match": "\\b0o[0-7_]+"
        },
        {
          "comment": "Float literal with decimal point: 3.14, 3.14f32, 1_000.5f64",
          "name": "constant.numeric.float.f",
          "match": "\\b[0-9][0-9_]*\\.[0-9][0-9_]*([eE][+-]?[0-9][0-9_]*)?(f32|f64)?\\b"
        },
        {
          "comment": "Scientific notation: 1.5e10, 3e-4, 1.5E+10f64",
          "name": "constant.numeric.float.f",
          "match": "\\b[0-9][0-9_]*[eE][+-]?[0-9][0-9_]*(f32|f64)?\\b"
        },
        {
          "comment": "Integer with float suffix: 1f32, 42f64",
          "name": "constant.numeric.float.f",
          "match": "\\b[0-9][0-9_]*(f32|f64)\\b"
        },
        {
          "comment": "Decimal with optional type suffix: 123, 123i32, 1_000_000u64",
          "name": "constant.numeric.integer.f",
          "match": "\\b[0-9][0-9_]*(i8|i16|i32|i64|isize|u8|u16|u32|u64|usize)?\\b"
        }
      ]
    },
    "source_generator_definition": {
      "comment": "Source generator definition: #define(name, Param: Kind, ..Params: Kind)",
      "begin": "(#define)\\s*\\(",
      "beginCaptures": {
        "1": { "name": "keyword.other.directive.f" }
      },
      "end": "\\)",
      "patterns": [
        {
          "comment": "Generator name (first identifier)",
          "match": "(?<=\\()\\s*([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "entity.name.function.definition.f" }
          }
        },
        {
          "comment": "Variadic parameter with kind: ..Name: Kind",
          "match": "(\\.\\.)(\\$?[a-zA-Z_][a-zA-Z0-9_]*)\\s*(:)\\s*([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.operator.f" },
            "2": { "name": "variable.parameter.f" },
            "3": { "name": "punctuation.separator.type.f" },
            "4": { "name": "entity.name.type.f" }
          }
        },
        {
          "comment": "Parameter with kind: Name: Kind",
          "match": "(\\$?[a-zA-Z_][a-zA-Z0-9_]*)\\s*(:)\\s*([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "variable.parameter.f" },
            "2": { "name": "punctuation.separator.type.f" },
            "3": { "name": "entity.name.type.f" }
          }
        }
      ]
    },
    "source_generator_invocation": {
      "comment": "Source generator invocation: #name(args)",
      "begin": "(#[a-z][a-zA-Z0-9_]*)\\s*\\(",
      "beginCaptures": {
        "1": { "name": "keyword.other.directive.f" }
      },
      "end": "\\)",
      "patterns": [
        { "include": "#comments" },
        { "include": "#strings" },
        { "include": "#char_literal" },
        { "include": "#constants" },
        { "include": "#types" },
        { "include": "#struct_definition" },
        { "include": "#enum_definition" },
        { "include": "#numbers" },
        { "include": "#operators" },
        { "include": "#function_calls" },
        { "include": "#property_access" }
      ]
    }
  }
}
